<h2>Kittens!</h2>
<%= paginate @kittens %></br>
<div class="column large-6">
<% @kittens.each do |kitten| %>
    <% if kitten.id%2 == 0 %>
    <img src="<%= kitten.link %>">
  <% end %>
<% end %>
</div>
<div class="column large-6">
<% @kittens.each do |kitten| %>
    <% if kitten.id%2 != 0 %>
    <img src="<%= kitten.link %>">
  <% end %>
<% end %>
</div>
